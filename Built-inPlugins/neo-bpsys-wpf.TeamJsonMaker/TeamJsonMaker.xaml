<Page
    x:Class="neo_bpsys_wpf.TeamJsonMaker.TeamJsonMaker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:neo_bpsys_wpf.TeamJsonMaker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="TeamJsonMaker"
    d:DataContext="{d:DesignInstance Type=local:TeamJsonMakerViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Foreground="White"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Border
        Margin="10,10,10,10"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Style="{StaticResource Card}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="队伍 JSON 导入文件制作" />
            <ui:TextBox
                Grid.Row="1"
                MinWidth="150"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                PlaceholderText="队伍名称"
                Text="{Binding CurrentTeam.TeamName}" />
            <StackPanel
                Grid.Row="2"
                Margin="0,10,0,0"
                Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="队伍 LOGO Uri（填图床链接）: " />
                <ui:TextBox
                    MinWidth="250"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    PlaceholderText="LOGO Uri"
                    Text="{Binding CurrentTeam.ImageUri}" />
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                Margin="0,10,0,0"
                HorizontalAlignment="Left">
                <TextBlock Text="求生者选手" />
                <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding CurrentTeam.SurMemberList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <ui:TextBox
                                    MinWidth="250"
                                    Margin="10,0,0,0"
                                    PlaceholderText="选手名称"
                                    Text="{Binding Name}" />
                                <ui:TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="定妆照图床链接：" />
                                <ui:TextBox
                                    MinWidth="250"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    Text="{Binding ImageUri}" />
                                <ui:Button
                                    Margin="10,0,0,0"
                                    Background="PaleVioletRed"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=DataContext.RemoveSurMemberCommand}"
                                    CommandParameter="{Binding}"
                                    Content="删除"
                                    Icon="{ui:SymbolIcon Symbol=Delete24}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ui:Button
                    Command="{Binding AddSurMemberCommand}"
                    Content="添加选手"
                    Icon="{ui:SymbolIcon Symbol=Add24}" />
            </StackPanel>
            <StackPanel
                Grid.Row="4"
                Margin="0,10,0,0"
                HorizontalAlignment="Left">
                <TextBlock Text="监管者选手" />
                <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding CurrentTeam.HunMemberList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10,0,0,10" Orientation="Horizontal">
                                <ui:TextBox
                                    MinWidth="250"
                                    PlaceholderText="选手名称"
                                    Text="{Binding Name}" />
                                <ui:TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="定妆照图床链接：" />
                                <ui:TextBox
                                    MinWidth="250"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    Text="{Binding ImageUri}" />
                                <ui:Button
                                    Margin="10,0,0,0"
                                    Background="PaleVioletRed"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=DataContext.RemoveHunMemberCommand}"
                                    CommandParameter="{Binding}"
                                    Content="删除"
                                    Icon="{ui:SymbolIcon Symbol=Delete24}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ui:Button
                    Command="{Binding AddHunMemberCommand}"
                    Content="添加选手"
                    Icon="{ui:SymbolIcon Symbol=Add24}" />
            </StackPanel>
            <ui:Button
                Grid.Row="5"
                Margin="0,10,0,0"
                Command="{Binding ExportCommand}"
                Content="导出"
                Icon="{ui:SymbolIcon Symbol=ArrowExportLtr24}" />
        </Grid>
    </Border>
</Page>
