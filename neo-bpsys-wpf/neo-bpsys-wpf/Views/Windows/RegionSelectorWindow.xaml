<Window
    x:Class="neo_bpsys_wpf.Views.Windows.RegionSelectorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="#80000000"
    Topmost="True"
    ResizeMode="NoResize"
    WindowState="Maximized"
    ShowInTaskbar="False">
    <Grid>
        <Canvas Name="OverlayCanvas">
            <Rectangle Name="SelectionRect" Fill="#40FFFFFF" Stroke="White" StrokeThickness="2" Visibility="Collapsed" />
        </Canvas>
        <Border HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Background="#66000000" CornerRadius="8">
            <TextBlock Name="StepText" Padding="10,6" Foreground="White" FontSize="16"/>
        </Border>
    </Grid>
</Window>
