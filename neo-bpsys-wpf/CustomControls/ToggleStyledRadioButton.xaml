<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:neo_bpsys_wpf.CustomControls"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Style BasedOn="{StaticResource {x:Type RadioButton}}" TargetType="{x:Type controls:ToggleStyledRadioButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ToggleStyledRadioButton}">
                    <ToggleButton ContentTemplate="{TemplateBinding ContentTemplate}" IsChecked="{Binding Path=IsChecked, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                        <StackPanel>
                            <Image
                                Width="{TemplateBinding ImageWidth}"
                                Height="{TemplateBinding ImageHeight}"
                                Focusable="False"
                                Source="{TemplateBinding ImageSource}"
                                Stretch="UniformToFill" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                Focusable="False"
                                Text="{TemplateBinding TagName}" />
                        </StackPanel>
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding Path=IsChecked, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" Value="True">
                                <i:InvokeCommandAction Command="{Binding Path=CheckedCommand, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" CommandParameter="{Binding Path=TagName, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                    </ToggleButton>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>