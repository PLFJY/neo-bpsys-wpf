<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:neo_bpsys_wpf.CustomControls"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Style BasedOn="{StaticResource {x:Type RadioButton}}" TargetType="{x:Type controls:MapSelector}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:MapSelector}">
                    <ToggleButton ContentTemplate="{TemplateBinding ContentTemplate}" IsChecked="{Binding Path=IsChecked, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                        <StackPanel>
                            <Image
                                Focusable="False"
                                Source="{TemplateBinding ImageSource}"
                                Stretch="UniformToFill" />
                            <TextBlock
                                Margin="0,5,0,0"
                                Focusable="False"
                                Text="{TemplateBinding MapName}" />
                        </StackPanel>
                    </ToggleButton>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>