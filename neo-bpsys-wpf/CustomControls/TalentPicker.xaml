<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:neo_bpsys_wpf.CustomControls"
    xmlns:cv="clr-namespace:neo_bpsys_wpf.Converters"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <cv:BooleanToReverseVisibilityConverter x:Key="BooleanToReverseVisibilityConverter" />
    <Style TargetType="{x:Type control:TalentPicker}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:TalentPicker}">
                    <ControlTemplate.Resources>
                        <Style BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="ToggleButton">
                            <Setter Property="Height" Value="50" />
                            <Setter Property="Width" Value="50" />
                        </Style>
                    </ControlTemplate.Resources>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ui:TextBox
                            Margin="0,10,0,10"
                            IsReadOnly="True"
                            PlaceholderText="角色名称"
                            Text="{TemplateBinding CharacterName}" />
                        <Grid
                            x:Name="Sur"
                            Grid.Row="1"
                            Visibility="{TemplateBinding IsTypeHun,
                                                         Converter={StaticResource BooleanToReverseVisibilityConverter}}">
                            <StackPanel Margin="10,10,10,10">
                                <ToggleButton
                                    Width="50"
                                    Height="50"
                                    HorizontalAlignment="Center">
                                    <Image Source="{DynamicResource FlywheelEffect}" />
                                </ToggleButton>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <ToggleButton Width="50" Height="50">
                                        <Image Source="{DynamicResource KneeJerkReflex}" />
                                    </ToggleButton>
                                    <ToggleButton
                                        Width="50"
                                        Height="50"
                                        Margin="60,0,0,0">
                                        <Image Source="{DynamicResource BorrowedTime}" />
                                    </ToggleButton>
                                </StackPanel>
                                <ToggleButton
                                    Width="50"
                                    Height="50"
                                    HorizontalAlignment="Center">
                                    <Image Source="{DynamicResource TideTurner}" />
                                </ToggleButton>
                            </StackPanel>
                        </Grid>
                        <Grid
                            x:Name="Hun"
                            Grid.Row="1"
                            Visibility="{TemplateBinding IsTypeHun,
                                                         Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Margin="10,10,10,10">
                                <ToggleButton
                                    Width="50"
                                    Height="50"
                                    HorizontalAlignment="Center">
                                    <Image Source="{DynamicResource ConfinedSpace}" />
                                </ToggleButton>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <ToggleButton Width="50" Height="50">
                                        <Image Source="{DynamicResource Insolence}" />
                                    </ToggleButton>
                                    <ToggleButton
                                        Width="50"
                                        Height="50"
                                        Margin="60,0,0,0">
                                        <Image Source="{DynamicResource TrumpCard}" />
                                    </ToggleButton>
                                </StackPanel>
                                <ToggleButton
                                    Width="50"
                                    Height="50"
                                    HorizontalAlignment="Center">
                                    <Image Source="{DynamicResource Detention}" />
                                </ToggleButton>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>