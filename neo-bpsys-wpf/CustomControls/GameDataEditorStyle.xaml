<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:neo_bpsys_wpf.CustomControls"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Style TargetType="{x:Type controls:GameDataEditor}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GameDataEditor}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="{Binding GameDataType, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}}" />
                        <ui:TextBox
                            Width="150"
                            Margin="10,0,0,0"
                            PlaceholderText="{Binding GameDataType, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}}"
                            Text="{Binding GameDataValue, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>