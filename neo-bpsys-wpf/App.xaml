<core:AppBase
    x:Class="neo_bpsys_wpf.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bp="clr-namespace:neo_bpsys_wpf.Core.Controls;assembly=neo-bpsys-wpf.Core"
    xmlns:core="clr-namespace:neo_bpsys_wpf.Core;assembly=neo-bpsys-wpf.Core"
    xmlns:local="clr-namespace:neo_bpsys_wpf"
    xmlns:markup="clr-namespace:System.Windows.Markup;assembly=PresentationCore"
    xmlns:md="http://schemas.lepo.co/wpfui/2022/xaml/markdown"
    xmlns:themes="clr-namespace:neo_bpsys_wpf.Themes"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    ShutdownMode="OnExplicitShutdown">
    <core:AppBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                <md:ThemesDictionary />
                <md:ControlsDictionary />
                <themes:IconThemesDictionary Theme="Dark" />
                <ResourceDictionary Source="/Controls/CustomControlsStyleDictionary.xaml" />
                <!--  Styles  -->
                <ResourceDictionary Source="/Styles/ToggleButtonStyles.xaml" />
                <ResourceDictionary Source="/neo-bpsys-wpf.Core;component/Styles/Card.xaml" />
                <ResourceDictionary Source="/Styles/TitleBarButtonStyles.xaml" />
                <ResourceDictionary Source="/Styles/HighlightStyle.xaml" />
                <ResourceDictionary Source="/Styles/DefaultColorPickerStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--  Fonts  -->
            <FontFamily x:Key="Hanyi">/neo-bpsys-wpf;Component/Assets/Fonts/#汉仪第五人格体简</FontFamily>
            <FontFamily x:Key="POP1W5">/neo-bpsys-wpf;Component/Assets/Fonts/#华康POP1体W5</FontFamily>
            <FontFamily x:Key="EssayText">/neo-bpsys-wpf;Component/Assets/Fonts/#Essay Text</FontFamily>
            <FontFamily x:Key="Selawik">/neo-bpsys-wpf;Component/Assets/Fonts/#Selawik</FontFamily>
            <FontFamily x:Key="NotoSans">/neo-bpsys-wpf;Component/Assets/Fonts/#Noto Sans</FontFamily>

            <markup:XmlLanguage x:Key="CurrentLanguage">zh-CN</markup:XmlLanguage>

            <!--  CJK Fix  -->
            <Style BasedOn="{StaticResource {x:Type Label}}" TargetType="Label">
                <Setter Property="Language" Value="{DynamicResource CurrentLanguage}" />
            </Style>

            <!--  TextBlock disable  -->
            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                <!--  CJK Fix  -->
                <Setter Property="Language" Value="{DynamicResource CurrentLanguage}" />
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Foreground" Value="Gray" />
                        <Setter Property="Opacity" Value="0.6" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <!--  Images  -->
            <BitmapImage x:Key="surIcon" />
            <BitmapImage x:Key="hunIcon" />
        </ResourceDictionary>
    </core:AppBase.Resources>
</core:AppBase>
