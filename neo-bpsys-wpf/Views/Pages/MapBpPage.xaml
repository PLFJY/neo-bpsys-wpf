<Page
    x:Class="neo_bpsys_wpf.Views.Pages.MapBpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:neo_bpsys_wpf.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:neo_bpsys_wpf.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:neo_bpsys_wpf.ViewModels.Pages"
    Title="MapBpPage"
    d:DataContext="{d:DesignInstance Type=vm:MapBpPageViewModel}"
    d:DesignHeight="1500"
    d:DesignWidth="685"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <StackPanel>
        <Border
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="地图选择" />
                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <WrapPanel Orientation="Horizontal">
                        <cc:ToggleStyledRadioButton
                            Width="300"
                            Margin="0,0,10,10"
                            GroupName="MapPick"
                            ImageSource="/Assets/map/军工厂.png"
                            TagName="军工厂" />
                        <cc:ToggleStyledRadioButton
                            Width="300"
                            Margin="0,0,10,10"
                            GroupName="MapPick"
                            ImageSource="/Assets/map/红教堂.png"
                            TagName="红教堂" />
                        <cc:ToggleStyledRadioButton
                            Width="300"
                            Margin="0,0,10,10"
                            GroupName="MapPick"
                            ImageSource="/Assets/map/圣心医院.png"
                            TagName="圣心医院" />
                        <cc:ToggleStyledRadioButton
                            Width="300"
                            Margin="0,0,10,10"
                            GroupName="MapPick"
                            ImageSource="/Assets/map/里奥的回忆.png"
                            TagName="里奥的回忆" />
                        <cc:ToggleStyledRadioButton
                            Width="300"
                            Margin="0,0,10,10"
                            GroupName="MapPick"
                            ImageSource="/Assets/map/月亮河公园.png"
                            TagName="月亮河公园" />
                        <cc:ToggleStyledRadioButton
                            Width="300"
                            Margin="0,0,10,10"
                            GroupName="MapPick"
                            ImageSource="/Assets/map/湖景村.png"
                            TagName="湖景村" />
                        <cc:ToggleStyledRadioButton
                            Width="300"
                            Margin="0,0,10,10"
                            GroupName="MapPick"
                            ImageSource="/Assets/map/永眠镇.png"
                            TagName="永眠镇" />
                        <cc:ToggleStyledRadioButton
                            Width="300"
                            Margin="0,0,10,10"
                            GroupName="MapPick"
                            ImageSource="/Assets/map/唐人街.png"
                            TagName="唐人街" />
                        <cc:ToggleStyledRadioButton
                            Width="300"
                            Margin="0,0,10,10"
                            GroupName="MapPick"
                            ImageSource="/Assets/map/不归林.png"
                            TagName="不归林" />
                    </WrapPanel>
                </StackPanel>
            </Grid>
        </Border>
        <Border
            Margin="0,10,0,10"
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="地图禁用" />
                <WrapPanel
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <cc:ToggleStyledRadioButton
                        Width="300"
                        Margin="0,0,10,10"
                        GroupName="MapBan"
                        ImageSource="/Assets/map_singleColor/无禁用.png"
                        TagName="无禁用" />
                    <cc:ToggleStyledRadioButton
                        Width="300"
                        Margin="0,0,10,10"
                        GroupName="MapBan"
                        ImageSource="/Assets/map_singleColor/军工厂.png"
                        TagName="军工厂" />
                    <cc:ToggleStyledRadioButton
                        Width="300"
                        Margin="0,0,10,10"
                        GroupName="MapBan"
                        ImageSource="/Assets/map_singleColor/红教堂.png"
                        TagName="红教堂" />
                    <cc:ToggleStyledRadioButton
                        Width="300"
                        Margin="0,0,10,10"
                        GroupName="MapBan"
                        ImageSource="/Assets/map_singleColor/圣心医院.png"
                        TagName="圣心医院" />
                    <cc:ToggleStyledRadioButton
                        Width="300"
                        Margin="0,0,10,10"
                        GroupName="MapBan"
                        ImageSource="/Assets/map_singleColor/里奥的回忆.png"
                        TagName="里奥的回忆" />
                    <cc:ToggleStyledRadioButton
                        Width="300"
                        Margin="0,0,10,10"
                        GroupName="MapBan"
                        ImageSource="/Assets/map_singleColor/月亮河公园.png"
                        TagName="月亮河公园" />
                    <cc:ToggleStyledRadioButton
                        Width="300"
                        Margin="0,0,10,10"
                        GroupName="MapBan"
                        ImageSource="/Assets/map_singleColor/湖景村.png"
                        TagName="湖景村" />
                    <cc:ToggleStyledRadioButton
                        Width="300"
                        Margin="0,0,10,10"
                        GroupName="MapBan"
                        ImageSource="/Assets/map_singleColor/永眠镇.png"
                        TagName="永眠镇" />
                    <cc:ToggleStyledRadioButton
                        Width="300"
                        Margin="0,0,10,10"
                        GroupName="MapBan"
                        ImageSource="/Assets/map_singleColor/唐人街.png"
                        TagName="唐人街" />
                    <cc:ToggleStyledRadioButton
                        Width="300"
                        Margin="0,0,10,10"
                        GroupName="MapBan"
                        ImageSource="/Assets/map_singleColor/不归林.png"
                        TagName="不归林" />
                </WrapPanel>
            </Grid>
        </Border>
    </StackPanel>
</Page>
