<Page
    x:Class="neo_bpsys_wpf.Views.Pages.BanSurPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:neo_bpsys_wpf.Controls"
    xmlns:cv="clr-namespace:neo_bpsys_wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:neo_bpsys_wpf.Locales"
    xmlns:local="clr-namespace:neo_bpsys_wpf.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:neo_bpsys_wpf.ViewModels.Pages"
    Title="BanSurPage"
    d:DataContext="{d:DesignInstance Type=vm:BanSurPageViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="1500"
    d:DesignWidth="685"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <cv:IntPlusOneConverter x:Key="IntPlusOneConverter" />
        <cv:IndexFormatConverter x:Key="IndexFormatConverter" />
    </Page.Resources>
    <WrapPanel Orientation="Horizontal">
        <Border
            Margin="0,0,10,10"
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{I18N {x:Static lang:LangKeys.CurrentBan}}" />
                <ItemsControl
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Focusable="False"
                    ItemsSource="{Binding BanSurCurrentViewModelList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:CharacterSelector
                                Margin="0,0,10,10"
                                Command="{Binding ConfirmCommand}"
                                ImageSource="{Binding PreviewImage}"
                                IsEnabled="{Binding IsEnabled}"
                                IsHighlighted="{Binding IsHighlighted}"
                                ItemsSource="{Binding CharaList}"
                                SelectedValue="{Binding SelectedChara}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        <Border
            Margin="0,0,10,10"
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{I18N {x:Static lang:LangKeys.GlobalBan}}" />
                <ItemsControl
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Focusable="False"
                    ItemsSource="{Binding BanSurGlobalViewModelList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:CharacterSelector
                                Margin="0,0,10,10"
                                Command="{Binding ConfirmCommand}"
                                ImageSource="{Binding PreviewImage}"
                                IsEnabled="{Binding IsEnabled}"
                                IsHighlighted="{Binding IsHighlighted}"
                                ItemsSource="{Binding CharaList}"
                                SelectedValue="{Binding SelectedChara}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        <Border
            Margin="0,0,0,10"
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{I18N {x:Static lang:LangKeys.BanNumberControl}}" />
                <TextBlock
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Text="{I18N {x:Static lang:LangKeys.CurrentBan}}" />
                <ItemsControl
                    Grid.Row="2"
                    Margin="0,10,0,0"
                    ItemsSource="{Binding BanSurCurrentViewModelList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,10,10" Orientation="Horizontal">
                                <ui:ToggleSwitch IsChecked="{Binding IsEnabled}" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Tag="{I18N {x:Static lang:LangKeys.IndexFormat}}">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource IndexFormatConverter}">
                                            <Binding Converter="{StaticResource IntPlusOneConverter}" Path="Index" />
                                            <Binding Path="Tag" RelativeSource="{RelativeSource Self}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock
                    Grid.Row="3"
                    Margin="0,10,0,0"
                    Text="{I18N {x:Static lang:LangKeys.GlobalBan}}" />
                <ItemsControl
                    Grid.Row="4"
                    Margin="0,10,0,0"
                    ItemsSource="{Binding BanSurGlobalViewModelList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,10,10" Orientation="Horizontal">
                                <ui:ToggleSwitch IsChecked="{Binding IsEnabled}" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Tag="{I18N {x:Static lang:LangKeys.IndexFormat}}">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource IndexFormatConverter}">
                                            <Binding Converter="{StaticResource IntPlusOneConverter}" Path="Index" />
                                            <Binding Path="Tag" RelativeSource="{RelativeSource Self}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </WrapPanel>
</Page>
