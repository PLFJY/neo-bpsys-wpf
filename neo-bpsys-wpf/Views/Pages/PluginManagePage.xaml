<Page x:Class="neo_bpsys_wpf.Views.Pages.PluginManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="插件管理">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="插件管理" FontSize="28" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="管理和配置应用程序插件" FontSize="14" Opacity="0.7"/>
            
            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <ui:Button 
                    Content="刷新插件列表" 
                    Icon="{ui:SymbolIcon ArrowClockwise24}"
                    Command="{Binding RefreshPluginsCommand}"
                    Margin="0,0,10,0"/>
                <ui:Button 
                    Content="加载所有插件" 
                    Icon="{ui:SymbolIcon DocumentAdd24}"
                    Command="{Binding LoadAllPluginsCommand}"
                    Margin="0,0,10,0"/>
                <ui:Button 
                    Content="启动所有插件" 
                    Icon="{ui:SymbolIcon Play24}"
                    Command="{Binding StartAllPluginsCommand}"
                    Margin="0,0,10,0"/>
                <ui:Button 
                    Content="打开插件文件夹" 
                    Icon="{ui:SymbolIcon FolderOpen24}"
                    Command="{Binding OpenPluginFolderCommand}"/>
            </StackPanel>
        </StackPanel>

        <!-- Plugin List -->
        <ScrollViewer Grid.Row="1" Margin="20,0,20,10">
            <ItemsControl ItemsSource="{Binding Plugins}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:Card Margin="0,0,0,10" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Plugin Info -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Version, StringFormat='v{0}'}" FontSize="12" Opacity="0.7" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                        <Border Background="{DynamicResource ControlStrongFillColorDefaultBrush}" 
                                                CornerRadius="3" 
                                                Padding="6,2" 
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding StateDisplayName}" FontSize="11"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" Opacity="0.7" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Author, StringFormat='作者: {0}'}" FontSize="12" Opacity="0.6" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" FontSize="11" Opacity="0.5" Margin="0,2,0,0" FontFamily="Consolas"/>
                                </StackPanel>

                                <!-- Plugin Controls -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <ui:Button 
                                        Content="加载" 
                                        Icon="{ui:SymbolIcon DocumentAdd20}"
                                        Appearance="Secondary"
                                        Command="{Binding LoadCommand}"
                                        Margin="0,0,5,0"
                                        Visibility="{Binding CanLoad, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <ui:Button 
                                        Content="启动" 
                                        Icon="{ui:SymbolIcon Play20}"
                                        Appearance="Primary"
                                        Command="{Binding StartCommand}"
                                        Margin="0,0,5,0"
                                        Visibility="{Binding CanStart, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <ui:Button 
                                        Content="停止" 
                                        Icon="{ui:SymbolIcon Stop20}"
                                        Appearance="Caution"
                                        Command="{Binding StopCommand}"
                                        Margin="0,0,5,0"
                                        Visibility="{Binding CanStop, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <ui:Button 
                                        Content="卸载" 
                                        Icon="{ui:SymbolIcon Delete20}"
                                        Appearance="Secondary"
                                        Command="{Binding UnloadCommand}"
                                        Margin="0,0,5,0"
                                        Visibility="{Binding CanUnload, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <ToggleButton 
                                        Content="{Binding IsEnabled, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='已启用|已禁用'}"
                                        IsChecked="{Binding IsEnabled}"
                                        Command="{Binding ToggleEnableCommand}"
                                        Margin="5,0,0,0"
                                        MinWidth="80"/>
                                </StackPanel>

                                <!-- Error Message -->
                                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                        Background="{DynamicResource SystemFillColorCriticalBrush}"
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,10,0,0"
                                        Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="错误信息:" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap" FontSize="11" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </ui:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource ControlFillColorDefaultBrush}" 
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
                <ui:ProgressRing Grid.Column="1" 
                                 IsIndeterminate="True" 
                                 Width="20" 
                                 Height="20"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Page>
