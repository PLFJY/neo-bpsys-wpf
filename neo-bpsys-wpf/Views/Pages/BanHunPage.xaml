<Page
    x:Class="neo_bpsys_wpf.Views.Pages.BanHunPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:neo_bpsys_wpf.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:neo_bpsys_wpf.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:neo_bpsys_wpf.ViewModels.Pages"
    Title="BanHunPage"
    d:DataContext="{d:DesignInstance Type=vm:BanHunPageViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="1000"
    d:DesignWidth="685"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <WrapPanel Orientation="Horizontal">
        <Border
            Margin="0,0,10,10"
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="当局禁用" />
                <WrapPanel
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <cc:CharacterSelector
                        x:Name="BanHunCuurent0"
                        Margin="0,0,10,10"
                        ItemsSource="{Binding SharedDataService.HunCharaList}" />
                    <cc:CharacterSelector
                        x:Name="BanHunCurrent1"
                        Margin="0,0,10,10"
                        ItemsSource="{Binding SharedDataService.HunCharaList}" />
                </WrapPanel>
            </Grid>
        </Border>
        <Border
            Margin="0,0,10,10"
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="全局禁用" />
                <WrapPanel
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <cc:CharacterSelector
                        x:Name="BanHunGlobal0"
                        Margin="0,0,10,10"
                        ItemsSource="{Binding SharedDataService.HunCharaList}" />
                    <cc:CharacterSelector
                        x:Name="BanHunGlobal1"
                        Margin="0,0,10,10"
                        ItemsSource="{Binding SharedDataService.HunCharaList}" />
                    <cc:CharacterSelector
                        x:Name="BanHunGlobal2"
                        Margin="0,0,10,10"
                        ItemsSource="{Binding SharedDataService.HunCharaList}" />
                </WrapPanel>
            </Grid>
        </Border>
        <Border
            Margin="0,0,0,10"
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="禁用数量控制" />
                <TextBlock
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Text="当局禁用" />
                <StackPanel
                    Grid.Row="2"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <ui:ToggleSwitch />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="1号位" />
                    <ui:ToggleSwitch Margin="20,0,0,0" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="2号位" />
                </StackPanel>
                <TextBlock
                    Grid.Row="3"
                    Margin="0,10,0,0"
                    Text="全局禁用" />
                <StackPanel
                    Grid.Row="4"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <ui:ToggleSwitch />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="1号位" />
                    <ui:ToggleSwitch Margin="20,0,0,0" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="2号位" />
                    <ui:ToggleSwitch Margin="20,0,0,0" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="3号位" />

                </StackPanel>
            </Grid>
        </Border>
    </WrapPanel>
</Page>
