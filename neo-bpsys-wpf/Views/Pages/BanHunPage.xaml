<Page
    x:Class="neo_bpsys_wpf.Views.Pages.BanHunPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:neo_bpsys_wpf.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:neo_bpsys_wpf.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:neo_bpsys_wpf.ViewModels.Pages"
    Title="BanHunPage"
    d:DataContext="{d:DesignInstance Type=vm:BanHunPageViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="1000"
    d:DesignWidth="685"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="cc:CharaSelector">
            <Setter Property="Margin" Value="0,0,10,10" />
        </Style>
    </Page.Resources>
    <WrapPanel Orientation="Horizontal">
        <Border
            Margin="0,0,10,10"
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="当局禁用" />
                <WrapPanel
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <cc:CharaSelector
                        x:Name="BanHunCurrent0"
                        Command="{Binding ConfirmCurrentBanCommand}"
                        ImageSource="{Binding SharedDataService.CurrentGame.CurrentHunBannedList[0].HeaderImage_SingleColor}"
                        Index="0"
                        ItemsSource="{Binding SharedDataService.HunCharaList}"
                        SelectedValue="{Binding CurrentBannedArray[0], Mode=TwoWay}" />
                    <cc:CharaSelector
                        x:Name="BanHunCurrent1"
                        Command="{Binding ConfirmCurrentBanCommand}"
                        ImageSource="{Binding SharedDataService.CurrentGame.CurrentHunBannedList[1].HeaderImage_SingleColor}"
                        Index="1"
                        ItemsSource="{Binding SharedDataService.HunCharaList}"
                        SelectedValue="{Binding CurrentBannedArray[1]}" />
                </WrapPanel>
            </Grid>
        </Border>
        <Border
            Margin="0,0,10,10"
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="全局禁用" />
                <WrapPanel
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <cc:CharaSelector
                        x:Name="BanHunGlobal0"
                        Command="{Binding ConfirmGlobalBanCommand}"
                        ImageSource="{Binding SharedDataService.CurrentGame.HunTeam.GlobalBannedHunList[0].HeaderImage_SingleColor}"
                        Index="0"
                        ItemsSource="{Binding SharedDataService.HunCharaList}"
                        SelectedValue="{Binding GlobalBannedArray[0]}" />
                    <cc:CharaSelector
                        x:Name="BanHunGlobal1"
                        Command="{Binding ConfirmGlobalBanCommand}"
                        ImageSource="{Binding SharedDataService.CurrentGame.HunTeam.GlobalBannedHunList[1].HeaderImage_SingleColor}"
                        Index="1"
                        ItemsSource="{Binding SharedDataService.HunCharaList}"
                        SelectedValue="{Binding GlobalBannedArray[1]}" />
                    <cc:CharaSelector
                        x:Name="BanHunGlobal2"
                        Command="{Binding ConfirmGlobalBanCommand}"
                        ImageSource="{Binding SharedDataService.CurrentGame.HunTeam.GlobalBannedHunList[2].HeaderImage_SingleColor}"
                        Index="2"
                        ItemsSource="{Binding SharedDataService.HunCharaList}"
                        SelectedValue="{Binding GlobalBannedArray[2]}" />
                </WrapPanel>
            </Grid>
        </Border>
        <Border
            Margin="0,0,0,10"
            Padding="10"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="禁用数量控制" />
                <TextBlock
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Text="当局禁用" />
                <StackPanel
                    Grid.Row="2"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <ui:ToggleSwitch IsChecked="{Binding SharedDataService.CanCurrentHunBanned[0]}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="1号位" />
                    <ui:ToggleSwitch Margin="20,0,0,0" IsChecked="{Binding SharedDataService.CanCurrentHunBanned[1]}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="2号位" />
                </StackPanel>
                <TextBlock
                    Grid.Row="3"
                    Margin="0,10,0,0"
                    Text="全局禁用" />
                <StackPanel
                    Grid.Row="4"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <ui:ToggleSwitch IsChecked="{Binding SharedDataService.CanGlobalHunBanned[0]}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="1号位" />
                    <ui:ToggleSwitch Margin="20,0,0,0" IsChecked="{Binding SharedDataService.CanGlobalHunBanned[1]}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="2号位" />
                    <ui:ToggleSwitch Margin="20,0,0,0" IsChecked="{Binding SharedDataService.CanGlobalHunBanned[2]}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="3号位" />
                </StackPanel>
            </Grid>
        </Border>
    </WrapPanel>
</Page>
