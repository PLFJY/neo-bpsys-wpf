<Page
    x:Class="neo_bpsys_wpf.Views.Pages.ScorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:neo_bpsys_wpf.Controls"
    xmlns:cv="clr-namespace:neo_bpsys_wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:neo_bpsys_wpf.Core.Enums;assembly=neo-bpsys-wpf.Core"
    xmlns:lang="clr-namespace:neo_bpsys_wpf.Assets.Locales"
    xmlns:local="clr-namespace:neo_bpsys_wpf.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:neo_bpsys_wpf.ViewModels.Pages"
    Title="ScorePage"
    d:DataContext="{d:DesignInstance Type=vm:ScorePageViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="1500"
    d:DesignWidth="900"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <WrapPanel Orientation="Horizontal">
        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{I18N {x:Static lang:LangKeys.ScoreInBPWindowAndGame}}" />
                <Grid Grid.Row="1" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="350" />
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Setter Property="Width" Value="80" />
                            <Setter Property="Height" Value="40" />
                            <Setter Property="Margin" Value="10" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </Grid.Resources>
                    <StackPanel Grid.Column="0">
                        <Button
                            Width="100"
                            Command="{Binding Escape4Command}"
                            Content="{I18N {x:Static lang:LangKeys.FourEscape}}" />
                        <Button
                            Width="100"
                            Command="{Binding Escape3Command}"
                            Content="{I18N {x:Static lang:LangKeys.ThreeEscape}}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="0,30,0,0">
                        <Button
                            Width="140"
                            Command="{Binding TieCommand}"
                            Content="{I18N {x:Static lang:LangKeys.Tie}}" />
                        <Button
                            Width="140"
                            Command="{Binding CalculateMajorPointCommand}"
                            Content="{I18N {x:Static lang:LangKeys.ScoreSettlement}}" />
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <Button
                            Width="100"
                            Command="{Binding Out4Command}"
                            Content="{I18N {x:Static lang:LangKeys.FourEliminate}}" />
                        <Button
                            Width="102"
                            Command="{Binding Out3Command}"
                            Content="{I18N {x:Static lang:LangKeys.ThreeEliminate}}" />
                    </StackPanel>
                    <StackPanel Grid.Column="3">
                        <Button
                            Width="150"
                            Command="{Binding ResetCommand}"
                            Content="{I18N {x:Static lang:LangKeys.ResetAllScores}}" />
                        <Button
                            Width="150"
                            Command="{Binding ResetMinorPointCommand}"
                            Content="{I18N {x:Static lang:LangKeys.ResetGameScores}}" />
                        <Button
                            Width="150"
                            Command="{Binding ManualControlCommand}"
                            Content="{I18N {x:Static lang:LangKeys.ControlManually}}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="4"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center">
                        <TextBlock
                            VerticalAlignment="Center"
                            d:Text="主队名称  W:0 D:0  小比分:0"
                            Tag="{I18N {x:Static lang:LangKeys.GameScores}}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}  W:{1} D:{2}  {3}:{4}">
                                    <Binding Path="MainTeam.Name" />
                                    <Binding Path="MainTeam.Score.Win" />
                                    <Binding Path="MainTeam.Score.Tie" />
                                    <Binding Path="Tag" RelativeSource="{RelativeSource Self}" />
                                    <Binding Path="MainTeam.Score.MinorPoints" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            d:Text="客队名称  W:0 D:0  小比分:0"
                            Tag="{I18N {x:Static lang:LangKeys.GameScores}}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}  W:{1} D:{2}  {3}:{4}">
                                    <Binding Path="AwayTeam.Name" />
                                    <Binding Path="AwayTeam.Score.Win" />
                                    <Binding Path="AwayTeam.Score.Tie" />
                                    <Binding Path="Tag" RelativeSource="{RelativeSource Self}" />
                                    <Binding Path="AwayTeam.Score.MinorPoints" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        <Border Style="{StaticResource Card}">
            <Border.Resources>
                <cv:BooleanToEnumConverter x:Key="BooleanToEnumConverter" />
            </Border.Resources>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{I18N {x:Static lang:LangKeys.ScoreStatistics}}" />
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="{I18N {x:Static lang:LangKeys.GameSelection}}" />
                        <ComboBox
                            Width="150"
                            Margin="10,0,0,0"
                            DisplayMemberPath="Value"
                            ItemsSource="{Binding GameList}"
                            SelectedIndex="{Binding SelectedIndex, Mode=OneWay}"
                            SelectedValue="{Binding SelectedGameProgress}"
                            SelectedValuePath="Key" />
                        <ui:Button
                            Margin="10,0,0,0"
                            Command="{Binding NextGameCommand}"
                            Content="{I18N {x:Static lang:LangKeys.Next}}"
                            Icon="{ui:SymbolIcon Symbol=ArrowNext24}" />
                    </StackPanel>
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <CheckBox
                            x:Name="IsGameComplted"
                            HorizontalAlignment="Left"
                            Content="{I18N {x:Static lang:LangKeys.IsGameFinished}}"
                            IsChecked="{Binding IsGameFinished}" />
                        <ui:Button
                            Grid.Row="4"
                            HorizontalAlignment="Right"
                            Command="{Binding GlobalScoreUpdateToFrontCommand}"
                            Content="{I18N {x:Static lang:LangKeys.SynchronizeToFrontend}}"
                            Icon="{ui:SymbolIcon Symbol=ArrowUpload24}" />
                    </Grid>
                    <Grid
                        Grid.Row="3"
                        d:IsEnabled="False"
                        IsEnabled="{Binding ElementName=IsGameComplted, Path=IsChecked, Mode=TwoWay}">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <GroupBox
                                Grid.Column="0"
                                Padding="5"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderThickness="0"
                                Header="{I18N {x:Static lang:LangKeys.CampOfHomeTeam}}">
                                <StackPanel>
                                    <RadioButton
                                        Name="MainSurRadioButton"
                                        Width="20"
                                        Height="30"
                                        Content="{I18N {x:Static lang:LangKeys.Survivor}}"
                                        IsChecked="{Binding MainTeamCamp, Converter={StaticResource BooleanToEnumConverter}, ConverterParameter={x:Static enum:Camp.Sur}, Mode=TwoWay}" />
                                    <RadioButton
                                        Name="MainHunRadioButton"
                                        Margin="0,10,0,0"
                                        Content="{I18N {x:Static lang:LangKeys.Hunter}}"
                                        IsChecked="{Binding MainTeamCamp, Converter={StaticResource BooleanToEnumConverter}, ConverterParameter={x:Static enum:Camp.Hun}, Mode=TwoWay}" />
                                </StackPanel>
                            </GroupBox>
                            <GroupBox
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Padding="5"
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderThickness="0"
                                Header="{I18N {x:Static lang:LangKeys.CampOfAwayTeam}}">
                                <StackPanel>
                                    <RadioButton
                                        Name="AwaySurRadioButton"
                                        Content="{I18N {x:Static lang:LangKeys.Survivor}}"
                                        IsChecked="{Binding ElementName=MainHunRadioButton, Path=IsChecked, Mode=TwoWay}" />
                                    <RadioButton
                                        Name="AwayHunRadioButton"
                                        Margin="0,10,0,0"
                                        Content="{I18N {x:Static lang:LangKeys.Hunter}}"
                                        IsChecked="{Binding ElementName=MainSurRadioButton, Path=IsChecked, Mode=TwoWay}" />
                                </StackPanel>
                            </GroupBox>
                        </Grid>
                        <GroupBox
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            Padding="5"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderThickness="0"
                            Header="{I18N {x:Static lang:LangKeys.GameResult}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <RadioButton
                                        Content="{I18N {x:Static lang:LangKeys.FourEscape}}"
                                        GroupName="GameResult"
                                        IsChecked="{Binding SelectedGameResult, Converter={StaticResource BooleanToEnumConverter}, ConverterParameter={x:Static enum:GameResult.Escape4}, Mode=TwoWay}" />
                                    <RadioButton
                                        Margin="0,30,0,0"
                                        Content="{I18N {x:Static lang:LangKeys.ThreeEscape}}"
                                        GroupName="GameResult"
                                        IsChecked="{Binding SelectedGameResult, Converter={StaticResource BooleanToEnumConverter}, ConverterParameter={x:Static enum:GameResult.Escape3}, Mode=TwoWay}" />
                                </StackPanel>
                                <RadioButton
                                    Grid.Column="1"
                                    Content="{I18N {x:Static lang:LangKeys.Tie}}"
                                    GroupName="GameResult"
                                    IsChecked="{Binding SelectedGameResult, Converter={StaticResource BooleanToEnumConverter}, ConverterParameter={x:Static enum:GameResult.Tie}, Mode=TwoWay}" />
                                <StackPanel Grid.Column="2">
                                    <RadioButton
                                        Content="{I18N {x:Static lang:LangKeys.FourEliminate}}"
                                        GroupName="GameResult"
                                        IsChecked="{Binding SelectedGameResult, Converter={StaticResource BooleanToEnumConverter}, ConverterParameter={x:Static enum:GameResult.Out4}, Mode=TwoWay}" />
                                    <RadioButton
                                        Margin="0,30,0,0"
                                        Content="{I18N {x:Static lang:LangKeys.ThreeEliminate}}"
                                        GroupName="GameResult"
                                        IsChecked="{Binding SelectedGameResult, Converter={StaticResource BooleanToEnumConverter}, ConverterParameter={x:Static enum:GameResult.Out3}, Mode=TwoWay}" />
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <Border Style="{StaticResource Card}" Visibility="{Binding IsDebugContentVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border.Resources>
                <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            </Border.Resources>
            <StackPanel>
                <DataGrid ItemsSource="{Binding GameGlobalInfoRecord}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Key}" Header="Key" />
                        <DataGridTextColumn Binding="{Binding Value.IsGameFinished}" Header="IsGameFinished" />
                        <DataGridTextColumn Binding="{Binding Value.MainTeamCamp}" Header="MainTeamCamp" />
                        <DataGridTextColumn Binding="{Binding Value.GameResult}" Header="GameResult" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </WrapPanel>
</Page>
