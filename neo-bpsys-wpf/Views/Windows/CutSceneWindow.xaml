<controls:FrontedWindowBase
    x:Class="neo_bpsys_wpf.Views.Windows.CutSceneWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ab="clr-namespace:neo_bpsys_wpf.Core.AttachedBehaviors;assembly=neo-bpsys-wpf.Core"
    xmlns:controls="clr-namespace:neo_bpsys_wpf.Core.Controls;assembly=neo-bpsys-wpf.Core"
    xmlns:cv="clr-namespace:neo_bpsys_wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:neo_bpsys_wpf.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:neo_bpsys_wpf.ViewModels.Windows"
    Title="{lex:Loc FrontendCutScene}"
    Width="1440"
    Height="810"
    d:DataContext="{d:DesignInstance Type=vm:CutSceneWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <cv:GameProgressToStringConverter x:Key="GameProgressToStringConverter" />
    </Window.Resources>
    <Canvas
        x:Name="BaseCanvas"
        Width="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Width}"
        Height="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Height}">
        <Canvas.Background>
            <ImageBrush d:ImageSource="/Resources/bpui/cutScene.png" ImageSource="{Binding Settings.BgImage}" />
        </Canvas.Background>
        <Canvas.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White" />
            </Style>
            <Style TargetType="Image">
                <Setter Property="Stretch" Value="UniformToFill" />
            </Style>
            <Style x:Key="TeamName" TargetType="TextBlock">
                <Setter Property="FontSize" Value="{Binding Settings.TextSettings.TeamName.FontSize}" />
                <Setter Property="FontFamily" Value="{Binding Settings.TextSettings.TeamName.FontFamily}" />
                <Setter Property="Foreground" Value="{Binding Settings.TextSettings.TeamName.Foreground}" />
                <Setter Property="FontWeight" Value="{Binding Settings.TextSettings.TeamName.FontWeight}" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style x:Key="MajorPoints" TargetType="TextBlock">
                <Setter Property="FontSize" Value="{Binding Settings.TextSettings.MajorPoints.FontSize}" />
                <Setter Property="FontFamily" Value="{Binding Settings.TextSettings.MajorPoints.FontFamily}" />
                <Setter Property="Foreground" Value="{Binding Settings.TextSettings.MajorPoints.Foreground}" />
                <Setter Property="FontWeight" Value="{Binding Settings.TextSettings.MajorPoints.FontWeight}" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style x:Key="SurPlayerId" TargetType="TextBlock">
                <Setter Property="FontSize" Value="{Binding Settings.TextSettings.SurPlayerId.FontSize}" />
                <Setter Property="FontFamily" Value="{Binding Settings.TextSettings.SurPlayerId.FontFamily}" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="{Binding Settings.TextSettings.SurPlayerId.Foreground}" />
                <Setter Property="FontWeight" Value="{Binding Settings.TextSettings.SurPlayerId.FontWeight}" />
            </Style>
            <Style x:Key="PlayerIdBorder" TargetType="Border">
                <Setter Property="Height" Value="38" />
                <Setter Property="Width" Value="180" />
            </Style>
            <Style x:Key="SurPickImage" TargetType="Image">
                <Setter Property="Width" Value="503" />
                <Setter Property="Height" Value="304" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Stretch" Value="UniformToFill" />
            </Style>
            <Style x:Key="SurPickImageBorder" TargetType="Border">
                <Setter Property="Width" Value="356" />
                <Setter Property="ClipToBounds" Value="True" />
            </Style>
            <Style x:Key="TalentBorder" TargetType="Border">
                <Setter Property="Height" Value="38" />
                <Setter Property="Width" Value="180" />
            </Style>
            <Style x:Key="TalentStackPanel" TargetType="StackPanel">
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="HorizontalAlignment" Value="Right" />
            </Style>
        </Canvas.Resources>
        <!--  Top Bar  -->
        <ui:Image
            Name="SurTeamLogo"
            Canvas.Left="251"
            Canvas.Top="14"
            Width="85"
            Height="85"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            d:Source="/Assets/TestLogo.JPG"
            CornerRadius="8"
            Source="{Binding CurrentGame.SurTeam.Logo}"
            Stretch="Fill" />
        <Border
            Name="SurTeamMajorPoint"
            Canvas.Left="380"
            Canvas.Top="42"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock
                d:FontFamily="Arial"
                d:FontSize="28"
                d:FontWeight="Bold"
                d:Foreground="White"
                d:Text="W0 D0"
                Style="{StaticResource MajorPoints}"
                Text="{Binding CurrentGame.SurTeam.Score.MajorPointsOnFront}"
                TextAlignment="Center" />
        </Border>
        <Border
            Name="SurTeamName"
            Canvas.Left="10"
            Canvas.Top="38"
            Width="207"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                d:FontFamily="{StaticResource NotoSans}"
                d:FontSize="30"
                d:Foreground="White"
                d:FontWeight="Bold"
                d:Text="求生者队伍名称"
                Style="{StaticResource TeamName}"
                Text="{Binding CurrentGame.SurTeam.Name}"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" HorizontalAlignment="Stretch" Margin="0,0,-14,0" />
        </Border>
        <Border
            Name="HunTeamName"
            Canvas.Left="1223"
            Canvas.Top="38"
            Width="207"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                d:FontFamily="{StaticResource NotoSans}"
                d:FontSize="30"
                d:Foreground="White"
                d:FontWeight="Bold"
                d:Text="监管者队伍名称"
                Style="{StaticResource TeamName}"
                Text="{Binding CurrentGame.HunTeam.Name}"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" Width="221" HorizontalAlignment="Left" Margin="-14,0,0,0" />
        </Border>
        <Border
            Name="HunTeamMajorPoint"
            Canvas.Left="971"
            Canvas.Top="42"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock
                d:FontFamily="Arial"
                d:FontSize="28"
                d:FontWeight="Bold"
                d:Foreground="White"
                d:Text="W0 D0"
                Style="{StaticResource MajorPoints}"
                Text="{Binding CurrentGame.HunTeam.Score.MajorPointsOnFront}"
                TextAlignment="Center" HorizontalAlignment="Left" />
        </Border>
        <ui:Image
            Name="HunTeamLogo"
            Canvas.Left="1104"
            Canvas.Top="14"
            Width="84"
            Height="85"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            d:Source="/Assets/TestLogo.JPG"
            CornerRadius="8"
            Source="{Binding CurrentGame.HunTeam.Logo}"
            Stretch="Fill" />
        <!--  Map  -->
        <Border
            Name="Map"
            Canvas.Left="487"
            Width="465"
            Height="112"
            Panel.ZIndex="-1"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image d:Source="/Assets/ChinaTown.png" Source="{Binding CurrentGame.PickedMapImage}" HorizontalAlignment="Center" Width="465" Height="112" VerticalAlignment="Center" />
        </Border>
        <Rectangle
            Name="MapMask"
            Canvas.Left="487"
            Canvas.Top="83"
            Width="465"
            Height="29"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Fill="Black" />
        <Border
            Name="MapName"
            Canvas.Left="487"
            Canvas.Top="83"
            Width="190"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}" Height="29">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                d:FontFamily="{StaticResource Hanyi}"
                d:FontSize="28"
                d:Foreground="White"
                d:Text="唐人街"
                FontFamily="{Binding Settings.TextSettings.MapName.FontFamily}"
                FontSize="{Binding Settings.TextSettings.MapName.FontSize}"
                FontWeight="{Binding Settings.TextSettings.MapName.FontWeight}"
                Foreground="{Binding Settings.TextSettings.MapName.Foreground}"
                Text="{lex:Loc {Binding CurrentGame.PickedMap, TargetNullValue=null}}" Height="29" Width="86" />
        </Border>
        <Border
            Name="GameProgress"
            Canvas.Left="678"
            Canvas.Top="83"
            Width="275"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Panel.ZIndex="1"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                d:FontFamily="{StaticResource POP1W5}"
                d:FontSize="24"
                d:Foreground="White"
                d:Text="GAME3 EXTRA FIRST HALF"
                FontFamily="{Binding Settings.TextSettings.GameProgress.FontFamily}"
                FontSize="{Binding Settings.TextSettings.GameProgress.FontSize}"
                FontWeight="{Binding Settings.TextSettings.GameProgress.FontWeight}"
                Foreground="{Binding Settings.TextSettings.GameProgress.Foreground}"
                TextOptions.TextFormattingMode="Display"
                TextOptions.TextRenderingMode="ClearType" Width="275" Height="30" Margin="0,4,0,0">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource GameProgressToStringConverter}">
                        <Binding Path="CurrentGame.GameProgress" />
                        <Binding Path="IsBo3Mode" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Border>

        <!--  Sur Pick  -->
        <Border
            Name="SurPick0"
            Canvas.Top="113"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource SurPickImageBorder}" HorizontalAlignment="Center" Height="311" VerticalAlignment="Center" Width="347">
            <Image
                d:Source="/Assets/先知.png"
                Source="{Binding CurrentGame.SurPlayerList[0].Character.BigImage}"
                Style="{StaticResource SurPickImage}" Width="347" Height="NaN" />
        </Border>
        <Border
            Name="SurPick1"
            Canvas.Left="350"
            Canvas.Top="113"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource SurPickImageBorder}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="347" Height="311">
            <Image
                d:Source="/Assets/先知.png"
                Source="{Binding CurrentGame.SurPlayerList[1].Character.BigImage}"
                Style="{StaticResource SurPickImage}" Width="347" Height="311" VerticalAlignment="Center" />
        </Border>
        <Border
            Name="SurPick2"
            Canvas.Top="463"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource SurPickImageBorder}" HorizontalAlignment="Center" Height="309" VerticalAlignment="Center" Width="347">
            <Image
                d:Source="/Assets/先知.png"
                Source="{Binding CurrentGame.SurPlayerList[2].Character.BigImage}"
                Style="{StaticResource SurPickImage}" Width="347" Height="309" VerticalAlignment="Center" />
        </Border>
        <Border
            Name="SurPick3"
            Canvas.Left="351"
            Canvas.Top="462"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource SurPickImageBorder}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="346" Height="310">
            <Image
                d:Source="/Assets/先知.png"
                Source="{Binding CurrentGame.SurPlayerList[3].Character.BigImage}"
                Style="{StaticResource SurPickImage}" Width="346" Height="310" VerticalAlignment="Center" />
        </Border>
        <!--  Hun Pick  -->
        <Border
            Name="HunPick"
            Canvas.Left="701"
            Canvas.Top="113"
            Width="739"
            Height="637"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image d:Source="/Assets/梦之女巫.png" Source="{Binding CurrentGame.HunPlayer.Character.BigImage}" HorizontalAlignment="Center" Width="738" />
        </Border>
        <!--  Player Id  -->
        <!--  Sur  -->
        <Border
            Name="SurId0"
            Canvas.Left="10"
            Canvas.Top="422"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource PlayerIdBorder}">
            <TextBlock
                d:FontFamily="{StaticResource NotoSans}"
                d:FontSize="18"
                d:Foreground="White"
                d:Text="求生者选手名Id"
                Style="{StaticResource SurPlayerId}"
                Text="{Binding CurrentGame.SurPlayerList[0].Member.Name}" />
        </Border>
        <Border
            Name="SurId1"
            Canvas.Left="353"
            Canvas.Top="425"
            Height="32"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource PlayerIdBorder}" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock
                d:FontFamily="{StaticResource NotoSans}"
                d:FontSize="18"
                d:Foreground="White"
                d:Text="求生者选手名Id"
                Style="{StaticResource SurPlayerId}"
                Text="{Binding CurrentGame.SurPlayerList[1].Member.Name}" />
        </Border>
        <Border
            Name="SurId2"
            Canvas.Left="1"
            Canvas.Top="772"
            Height="38"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource PlayerIdBorder}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                d:FontFamily="{StaticResource NotoSans}"
                d:FontSize="18"
                d:Foreground="White"
                d:Text="求生者选手Id"
                Style="{StaticResource SurPlayerId}"
                Text="{Binding CurrentGame.SurPlayerList[2].Member.Name}" Margin="8,0,0,0" />
        </Border>
        <Border
            Name="SurId3"
            Canvas.Left="351"
            Canvas.Top="772"
            Height="38"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource PlayerIdBorder}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180">
            <TextBlock
                d:FontFamily="{StaticResource NotoSans}"
                d:FontSize="18"
                d:Foreground="White"
                d:Text="求生者选手Id"
                Style="{StaticResource SurPlayerId}"
                Text="{Binding CurrentGame.SurPlayerList[3].Member.Name}" Margin="8,0,0,0" />
        </Border>
        <!--  Hun  -->
        <Border
            Name="HunId"
            Canvas.Left="701"
            Canvas.Top="750"
            Width="424"
            Height="60"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource PlayerIdBorder}" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                d:FontFamily="{StaticResource NotoSans}"
                d:FontSize="30"
                d:Foreground="White"
                d:Text="监管者选手Id"
                FontFamily="{Binding Settings.TextSettings.HunPlayerId.FontFamily}"
                FontSize="{Binding Settings.TextSettings.HunPlayerId.FontSize}"
                FontWeight="{Binding Settings.TextSettings.HunPlayerId.FontWeight}"
                Foreground="{Binding Settings.TextSettings.HunPlayerId.Foreground}"
                Text="{Binding CurrentGame.HunPlayer.Member.Name}" Height="35" Width="362" Margin="32,9,0,0" />
        </Border>

        <!--  Talent  -->
        <Border
            Name="SurTalent0"
            Canvas.Left="164"
            Canvas.Top="424"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource TalentBorder}" Height="36" Width="178">
            <StackPanel Style="{StaticResource TalentStackPanel}">
                <Image
                    d:Source="/Assets/Icons/white/BorrowedTime.png"
                    d:Visibility="Visible"
                    Source="{Binding BorrowedTimeImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[0].Talent.BorrowedTime, Converter={StaticResource BoolToVisibilityConverter}}" Height="30" Width="32" />
                <Image
                    d:Source="/Assets/Icons/white/TideTurner.png"
                    Source="{Binding TideTurnerImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[0].Talent.TideTurner, Converter={StaticResource BoolToVisibilityConverter}}" Height="32" Width="32" />
                <Image
                    d:Source="/Assets/Icons/white/FlywheelEffect.png"
                    Source="{Binding FlywheelEffectImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[0].Talent.FlywheelEffect, Converter={StaticResource BoolToVisibilityConverter}}" Height="32" Width="32" />
                <Image
                    d:Source="/Assets/Icons/white/KneeJerkReflex.png"
                    Source="{Binding KneeJerkReflexImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[0].Talent.KneeJerkReflex, Converter={StaticResource BoolToVisibilityConverter}}" Height="35" Width="32" />
            </StackPanel>
        </Border>
        <Border
            Name="SurTalent1"
            Canvas.Left="522"
            Canvas.Top="424"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource TalentBorder}" Height="37" Width="172">
            <StackPanel Style="{StaticResource TalentStackPanel}">
                <Image
                    d:Source="/Assets/Icons/white/BorrowedTime.png"
                    d:Visibility="Visible"
                    Source="{Binding BorrowedTimeImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[1].Talent.BorrowedTime, Converter={StaticResource BoolToVisibilityConverter}}" Height="32" Width="32" />
                <Image
                    d:Source="/Assets/Icons/white/TideTurner.png"
                    Source="{Binding TideTurnerImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[1].Talent.TideTurner, Converter={StaticResource BoolToVisibilityConverter}}" Height="32" Width="32" />
                <Image
                    d:Source="/Assets/Icons/white/FlywheelEffect.png"
                    Source="{Binding FlywheelEffectImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[1].Talent.FlywheelEffect, Converter={StaticResource BoolToVisibilityConverter}}" Height="32" Width="32" />
                <Image
                    d:Source="/Assets/Icons/white/KneeJerkReflex.png"
                    Source="{Binding KneeJerkReflexImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[1].Talent.KneeJerkReflex, Converter={StaticResource BoolToVisibilityConverter}}" Height="32" Width="32" />
            </StackPanel>
        </Border>
        <Border
            Name="SurTalent2"
            Canvas.Left="182"
            Canvas.Top="772"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource TalentBorder}" Height="38" Width="165" >
            <StackPanel Style="{StaticResource TalentStackPanel}">
                <Image
                    d:Source="/Assets/Icons/white/BorrowedTime.png"
                    d:Visibility="Visible"
                    Source="{Binding BorrowedTimeImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[2].Talent.BorrowedTime, Converter={StaticResource BoolToVisibilityConverter}}" Height="38" Width="38" />
                <Image
                    d:Source="/Assets/Icons/white/TideTurner.png"
                    Source="{Binding TideTurnerImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[2].Talent.TideTurner, Converter={StaticResource BoolToVisibilityConverter}}" Height="38" Width="38" />
                <Image
                    d:Source="/Assets/Icons/white/FlywheelEffect.png"
                    Source="{Binding FlywheelEffectImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[2].Talent.FlywheelEffect, Converter={StaticResource BoolToVisibilityConverter}}" Height="38" Width="38" />
                <Image
                    d:Source="/Assets/Icons/white/KneeJerkReflex.png"
                    Source="{Binding KneeJerkReflexImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[2].Talent.KneeJerkReflex, Converter={StaticResource BoolToVisibilityConverter}}" Height="38" Width="38" />
            </StackPanel>
        </Border>
        <Border
            Name="SurTalent3"
            Canvas.Left="532"
            Canvas.Top="772"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource TalentBorder}" Height="38" Width="165">
            <StackPanel Style="{StaticResource TalentStackPanel}">
                <Image
                    d:Source="/Assets/Icons/white/BorrowedTime.png"
                    d:Visibility="Visible"
                    Source="{Binding BorrowedTimeImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[3].Talent.BorrowedTime, Converter={StaticResource BoolToVisibilityConverter}}" Height="38" Width="38" />
                <Image
                    d:Source="/Assets/Icons/white/TideTurner.png"
                    Source="{Binding TideTurnerImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[3].Talent.TideTurner, Converter={StaticResource BoolToVisibilityConverter}}" Height="38" Width="38" />
                <Image
                    d:Source="/Assets/Icons/white/FlywheelEffect.png"
                    Source="{Binding FlywheelEffectImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[3].Talent.FlywheelEffect, Converter={StaticResource BoolToVisibilityConverter}}" Height="38" Width="38" />
                <Image
                    d:Source="/Assets/Icons/white/KneeJerkReflex.png"
                    Source="{Binding KneeJerkReflexImageSource}"
                    Visibility="{Binding CurrentGame.SurPlayerList[3].Talent.KneeJerkReflex, Converter={StaticResource BoolToVisibilityConverter}}" Height="38" Width="38" />
            </StackPanel>
        </Border>
        <!--  Hun  -->
        <Border
            Name="HunTalent"
            Canvas.Left="1133"
            Canvas.Top="754"
            Width="246"
            Height="50"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            Style="{StaticResource TalentBorder}" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel HorizontalAlignment="Left" Style="{StaticResource TalentStackPanel}">
                <Image
                    d:Source="/Assets/Icons/white/TrumpCard.png"
                    d:Visibility="Visible"
                    Source="{Binding TrumpCardImageSource}"
                    Visibility="{Binding CurrentGame.HunPlayer.Talent.TrumpCard, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Image
                    d:Source="/Assets/Icons/white/Detention.png"
                    Source="{Binding DetentionImageSource}"
                    Visibility="{Binding CurrentGame.HunPlayer.Talent.Detention, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Image
                    d:Source="/Assets/Icons/white/ConfinedSpace.png"
                    Source="{Binding ConfinedSpaceImageSource}"
                    Visibility="{Binding CurrentGame.HunPlayer.Talent.ConfinedSpace, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Image
                    d:Source="/Assets/Icons/white/Insolence.png"
                    Source="{Binding InsolenceImageSource}"
                    Visibility="{Binding CurrentGame.HunPlayer.Talent.Insolence, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>
        </Border>
        <Image
            Name="Trait"
            Canvas.Left="1380"
            Canvas.Top="750"
            Width="60"
            Height="60"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
            d:Source="/Assets/Blink.png"
            Source="{Binding CurrentGame.HunPlayer.Trait.Image}"
            Visibility="{Binding IsTraitVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Canvas>
</controls:FrontedWindowBase>
