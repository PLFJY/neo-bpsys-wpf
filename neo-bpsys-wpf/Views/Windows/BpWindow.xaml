<Window
    x:Class="neo_bpsys_wpf.Views.Windows.BpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cb="clr-namespace:neo_bpsys_wpf.CustomBehaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:neo_bpsys_wpf.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:neo_bpsys_wpf.ViewModels.Windows"
    Title="BpWindow"
    Width="1440"
    Height="810"
    d:DataContext="{d:DesignInstance Type=vm:BpWindowViewModel}"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Canvas
        x:Name="BaseCanvas"
        Width="1440"
        Height="810">
        <Canvas.Background>
            <ImageBrush ImageSource="/Assets/bp.png" />
        </Canvas.Background>
        <Canvas.Resources>
            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White" />
            </Style>
            <Style x:Key="CurrentBan" TargetType="Image">
                <Setter Property="Width" Value="43" />
                <Setter Property="Height" Value="43" />
            </Style>
            <Style x:Key="GlobalBan" TargetType="Image">
                <Setter Property="Width" Value="30" />
                <Setter Property="Height" Value="30" />

            </Style>
            <Style TargetType="Image">
                <Setter Property="Stretch" Value="UniformToFill" />
            </Style>
        </Canvas.Resources>
        <!--  Top bar  -->
        <ui:Image
            Name="SurTeamLogo"
            Canvas.Left="42"
            Canvas.Top="10"
            Width="85"
            Height="85"
            cb:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
            CornerRadius="8"
            Source="/Assets/TestLogo.JPG"
            Stretch="Fill" />
        <TextBlock
            Name="SurTeamMajorPoint"
            Canvas.Left="176"
            Canvas.Top="33"
            cb:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
            FontFamily="{StaticResource Selawik}"
            FontSize="28"
            Text="W0 D0"
            TextAlignment="Center" />
        <TextBlock
            Name="SurTeamName"
            Canvas.Left="297"
            Canvas.Top="32"
            Width="207"
            cb:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
            FontFamily="{StaticResource SourceHan}"
            FontSize="28"
            Text="求生者队伍名称"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow" />
        <TextBlock
            Name="MinorPointsSur"
            Canvas.Left="541"
            Canvas.Top="29"
            Width="52"
            Height="62"
            cb:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
            FontFamily="{StaticResource POP1W5}"
            FontSize="50"
            FontWeight="Bold"
            Text="0"
            TextAlignment="Center" />
        <TextBlock
            Name="MinorPointsHun"
            Canvas.Left="852"
            Canvas.Top="29"
            Width="52"
            Height="62"
            cb:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
            FontFamily="{StaticResource POP1W5}"
            FontSize="50"
            FontWeight="Bold"
            Text="0"
            TextAlignment="Center" />
        <TextBlock
            Name="HunTeamName"
            Canvas.Left="936"
            Canvas.Top="32"
            Width="207"
            cb:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
            FontFamily="{StaticResource SourceHan}"
            FontSize="28"
            Text="监管者队伍名称"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow" />
        <TextBlock
            x:Name="HunTeamMajorPoint"
            Canvas.Left="1172"
            Canvas.Top="34"
            cb:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
            FontFamily="{StaticResource Selawik}"
            FontSize="28"
            Text="W0 D0"
            TextAlignment="Center" />
        <ui:Image
            x:Name="HunTeamLogo"
            Canvas.Left="1301"
            Canvas.Top="10"
            Width="85"
            Height="85"
            cb:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
