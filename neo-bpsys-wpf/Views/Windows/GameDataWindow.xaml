                Canvas.Top="354"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
                Style="{StaticResource SurDataBorder}">
                <TextBlock
                    d:FontFamily="{StaticResource POP1W5}"
                    d:FontSize="22"
                    d:Foreground="White"
                    d:Text="1"
