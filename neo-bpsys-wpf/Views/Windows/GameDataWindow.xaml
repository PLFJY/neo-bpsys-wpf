            </Border>
            <Border
                Name="Player3Header"
                Canvas.Left="47"
                Canvas.Top="534"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
                Style="{StaticResource SurHeader}">
                <Image d:Source="/Assets/幸运儿.png" Source="{Binding CurrentGame.SurPlayerList[3].Character.HeaderImage}" />
            </Border>
            <!--  求生者选手Id  -->
            <Border
                Name="SurId0"
                Canvas.Left="115"
                Canvas.Top="354"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
