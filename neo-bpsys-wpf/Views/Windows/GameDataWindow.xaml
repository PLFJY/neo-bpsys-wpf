            <!--  求生者数据表头  -->
            <Border
                Name="Header_Character"
                Canvas.Left="47"
                Canvas.Top="307"
                Width="80"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}">
                <TextBlock
                    d:FontFamily="{StaticResource NotoSans}"
                    d:FontSize="16"
                    d:Foreground="White"
                    d:Text="Character"
                    Style="{StaticResource SurDataHeader}"
                    Text="{lex:Loc Character}" />
            </Border>

            <Border
                Name="Header_ID"
                Canvas.Left="154"
                Canvas.Top="307"
                Width="100"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}">
                <TextBlock
                    d:FontFamily="{StaticResource NotoSans}"
                    d:FontSize="16"
                    d:Foreground="White"
                    d:Text="Player ID"
                    Style="{StaticResource SurDataHeader}"
                    Text="{lex:Loc PlayerID}" />
            </Border>

            <Border
                Name="Header_DecodingProgress"
                Canvas.Left="331"
                Canvas.Top="307"
                Width="150"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}">
                <TextBlock
                    d:FontFamily="{StaticResource NotoSans}"
                    d:FontSize="16"
                    d:Foreground="White"
                    d:Text="Decoding progress"
                    Style="{StaticResource SurDataHeader}"
                    Text="{lex:Loc DecodingProgress}" />
            </Border>

            <Border
                Name="Header_PalletStrikes"
                Canvas.Left="485"
                Canvas.Top="307"
                Width="150"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}">
                <TextBlock
                    d:FontFamily="{StaticResource NotoSans}"
                    d:FontSize="16"
                    d:Foreground="White"
                    d:Text="Pallet strikes"
                    Style="{StaticResource SurDataHeader}"
                    Text="{lex:Loc PalletStrikes}" />
            </Border>

            <Border
                Name="Header_Rescues"
                Canvas.Left="634"
                Canvas.Top="307"
                Width="120"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}">
                <TextBlock
                    d:FontFamily="{StaticResource NotoSans}"
                    d:FontSize="16"
                    d:Foreground="White"
                    d:Text="Rescues"
                    Style="{StaticResource SurDataHeader}"
                    Text="{lex:Loc Rescues}" />
            </Border>

            <Border
                Name="Header_Heals"
                Canvas.Left="774"
                Canvas.Top="307"
                Width="120"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}">
                <TextBlock
                    d:FontFamily="{StaticResource NotoSans}"
                    d:FontSize="16"
                    d:Foreground="White"
                    d:Text="Heals"
                    Style="{StaticResource SurDataHeader}"
                    Text="{lex:Loc Heals}" />
            </Border>

            <Border
                Name="Header_ContainmentTime"
                Canvas.Left="894"
                Canvas.Top="307"
                Width="176"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}">
                <TextBlock
                    d:FontFamily="{StaticResource NotoSans}"
                    d:FontSize="16"
                    d:Foreground="White"
                    d:Text="Containment time (s)"
                    Style="{StaticResource SurDataHeader}"
                    Text="{lex:Loc ContainmentTime}" />
            </Border>


            <!--  求生者头像  -->
            <Border
                Name="Player0Header"
                Canvas.Left="47"
                Canvas.Top="354"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
                Style="{StaticResource SurHeader}">
                <Image d:Source="/Assets/幸运儿.png" Source="{Binding CurrentGame.SurPlayerList[0].Character.HeaderImage}" />
            </Border>
            <Border
