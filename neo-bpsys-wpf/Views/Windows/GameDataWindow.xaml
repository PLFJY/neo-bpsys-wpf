                Name="Sur0MachineDecoded"
                Canvas.Left="377"
                Canvas.Top="354"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
                Style="{StaticResource SurDataBorder}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        d:FontFamily="{StaticResource POP1W5}"
                        d:FontSize="22"
                        d:Foreground="White"
                        d:Text="25"
                        Style="{StaticResource SurData}"
                        Text="{Binding CurrentGame.SurPlayerList[0].Data.DecodingProgress}" />
                    <TextBlock
                        d:FontFamily="{StaticResource POP1W5}"
                        d:FontSize="22"
                        d:Foreground="White"
                        Style="{StaticResource SurData}"
                        Text="%" />
                </StackPanel>
            </Border>
            <Border
