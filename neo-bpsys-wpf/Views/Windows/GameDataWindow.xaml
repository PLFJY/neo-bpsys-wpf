                Height="86"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ab:DesignBehavior.IsDesignerMode="{Binding IsDesignerMode}"
                d:Source="/Assets/TestLogo.JPG"
                CornerRadius="8"
                Source="{Binding CurrentGame.HunTeam.Logo}"
