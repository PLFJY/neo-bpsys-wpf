<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:neo_bpsys_wpf.Controls"
    xmlns:cv="clr-namespace:neo_bpsys_wpf.Converters"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <cv:BooleanToReverseVisibilityConverter x:Key="BooleanToReverseVisibilityConverter" />
    <Style TargetType="{x:Type controls:GameDataEditor}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GameDataEditor}">
                    <Grid>
                        <!--  Sur  -->
                        <StackPanel Visibility="{TemplateBinding IsHunMode, Converter={StaticResource BooleanToReverseVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc DecodingProgress}" />
                                <ui:TextBox
                                    Width="150"
                                    Margin="10,0,0,0"
                                    PlaceholderText="{lex:Loc DecodingProgress}"
                                    Text="{Binding PlayerData.DecodingProgress, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}, Mode=TwoWay}" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc PalletStrikes}" />
                                <ui:TextBox
                                    Width="150"
                                    Margin="10,0,0,0"
                                    PlaceholderText="{lex:Loc PalletStrikes}"
                                    Text="{Binding PlayerData.PalletStrikes, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}, Mode=TwoWay}" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc Rescues}" />
                                <ui:TextBox
                                    Width="150"
                                    Margin="10,0,0,0"
                                    PlaceholderText="{lex:Loc Rescues}"
                                    Text="{Binding PlayerData.Rescues, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}, Mode=TwoWay}" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc Heals}" />
                                <ui:TextBox
                                    Width="150"
                                    Margin="10,0,0,0"
                                    PlaceholderText="{lex:Loc Heals}"
                                    Text="{Binding PlayerData.Heals, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}, Mode=TwoWay}" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc ContainmentTime}" />
                                <ui:TextBox
                                    Width="150"
                                    Margin="10,0,0,0"
                                    PlaceholderText="{lex:Loc ContainmentTime}"
                                    Text="{Binding PlayerData.ContainmentTime, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>
                        <!--  Hun  -->
                        <StackPanel Visibility="{TemplateBinding IsHunMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc RemainingCiphers}" />
                                <ui:TextBox
                                    Width="150"
                                    Margin="10,0,0,0"
                                    PlaceholderText="{lex:Loc RemainingCiphers}"
                                    Text="{Binding PlayerData.RemainingCipher, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}, Mode=TwoWay}" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc PalletsDestroyed}" />
                                <ui:TextBox
                                    Width="150"
                                    Margin="10,0,0,0"
                                    PlaceholderText="{lex:Loc PalletsDestroyed}"
                                    Text="{Binding PlayerData.PalletsDestroyed, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}, Mode=TwoWay}" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc SurvivorHits}" />
                                <ui:TextBox
                                    Width="150"
                                    Margin="10,0,0,0"
                                    PlaceholderText="{lex:Loc SurvivorHits}"
                                    Text="{Binding PlayerData.SurvivorHits, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}, Mode=TwoWay}" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc TerrorShocks}" />
                                <ui:TextBox
                                    Width="150"
                                    Margin="10,0,0,0"
                                    PlaceholderText="{lex:Loc TerrorShocks}"
                                    Text="{Binding PlayerData.TerrorShocks, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}, Mode=TwoWay}" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{lex:Loc Knockdowns}" />
                                <ui:TextBox
                                    Width="150"
                                    Margin="10,0,0,0"
                                    PlaceholderText="{lex:Loc Knockdowns}"
                                    Text="{Binding PlayerData.Knockdowns, RelativeSource={RelativeSource AncestorType={x:Type controls:GameDataEditor}}, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>