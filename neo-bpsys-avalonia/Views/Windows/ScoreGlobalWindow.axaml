<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:neo_bpsys_avalonia.ViewModels"
        x:Class="neo_bpsys_avalonia.Views.Windows.ScoreGlobalWindow"
        Title="前台-分数统计"
        Width="1440" Height="195">
  <Window.Styles>
    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="White"/>
    </Style>
  </Window.Styles>
  <Canvas Name="BaseCanvas"
          Width="{Binding $parent[Window].Bounds.Width}"
          Height="{Binding $parent[Window].Bounds.Height}">
    <Canvas.Background>
      <ImageBrush Source="avares://neo-bpsys-avalonia/Assets/scoreGlobal.png"/>
    </Canvas.Background>
    <TextBlock Canvas.Left="20" Canvas.Top="20" Text="Avalonia 分数统计"/>
    <StackPanel Orientation="Horizontal" Canvas.Left="50" Canvas.Top="80">
      <TextBlock Text="求生者："/>
      <TextBlock Text="{Binding SurTeamName}" Margin="10,0,0,0"/>
      <TextBlock Text=" 监管者：" Margin="20,0,0,0"/>
      <TextBlock Text="{Binding HunTeamName}" Margin="10,0,0,0"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Canvas.Left="50" Canvas.Top="120">
      <TextBlock Text="求生者比分："/>
      <TextBlock Text="{Binding SurMajorPoints}" Margin="10,0,0,0"/>
      <TextBlock Text=" 监管者比分：" Margin="20,0,0,0"/>
      <TextBlock Text="{Binding HunMajorPoints}" Margin="10,0,0,0"/>
    </StackPanel>
  </Canvas>
</Window>
